<Window x:Class="Utazas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox ItemsSource="{Binding Utasok}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding MegalloSorszam}" />
                        <TextBlock Text="{Binding FelszallasDatum}" />
                        <TextBlock Text="{Binding FelszallasIdo}" />
                        <TextBlock Text="{Binding Azonosito}" />
                        <TextBlock Text="{Binding Tipus}" />
                        <TextBlock Text="{Binding Datum}" />
                        <TextBlock Text="{Binding Jegy}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
